<h1>Listing product_details</h1>

<table>
  <tr>
    <th>Product Name</th>
    <th>Barcode</th>
    <th>Net weight g</th>
    <th>Pkg unit</th>
    <th>Shelf life d</th>
    <th>Std followed</th>
    <th>Aggregate info</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @product_details.each do |product_detail| %>
  <tr>
    <td><%= product_detail.product_name %></td>
    <td><%= product_detail.barcode %></td>
    <td><%= product_detail.net_weight_g %></td>
    <td><%= product_detail.pkg_unit %></td>
    <td><%= product_detail.shelf_life_d %></td>
    <td><%= product_detail.std_followed %></td>
    <td><%= product_detail.aggregate_info %></td>
    <td><%= link_to 'Show', product_detail %></td>
    <td><%= link_to 'Edit', edit_product_detail_path(product_detail) %></td>
    <td><%= link_to 'Destroy', product_detail, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

